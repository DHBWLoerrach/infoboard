<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/bb_background3"
    android:columnCount="2"
    android:orientation="vertical"
    android:padding="15dp"
    android:rowCount="4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp" >

        <ImageView
            android:id="@+id/image_profilansicht_bild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:contentDescription="@string/beschreibung"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:minHeight="80dp"
            android:minWidth="80dp"
            android:onClick="goFullScreen"
            android:padding="1dp"
            android:src="@drawable/bb_profileimage" />

        <TextView
            android:id="@+id/tv_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/DHBW_gray_light"
            android:gravity="left|center"
            android:minHeight="35dp"
            android:paddingLeft="10dp"
            android:text="Benutzerkontakt"
            android:textColor="@color/DHBW_gray_dark"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="top"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_row="2"
        android:background="@color/DHBW_gray_light"
        android:orientation="vertical"
        android:padding="7dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_profilansicht_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/kontakt_via"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp" >

            <ImageButton
                android:id="@+id/imageButton_profilansicht_mail"
                style="@drawable/bb_mailicon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/bb_mailicon"
                android:contentDescription="@string/beschreibung" />

            <ImageButton
                android:id="@+id/imageButton_profilansicht_tel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bb_telicon" 
                android:contentDescription="@string/beschreibung" />

            <ImageButton
                android:id="@+id/imageButton_profilansicht_sms"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:background="@drawable/bb_smsicon"
                android:contentDescription="@string/beschreibung" />
        </LinearLayout>
    </LinearLayout>

</GridLayout>