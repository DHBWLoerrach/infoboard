<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->


<!--       Costomize Action Bar: Start -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/gradient_actionbar</item>
        <item name="android:titleTextStyle">@style/Theme.MyAppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.MyAppTheme.ActionBar.TitleTextStyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/DHBW_white</item>
    </style>

    <!--
           Costomize Action Bar: Finish
           <item name="android:background">@drawable/shape</item>
    -->

    <style name="DHBW_Button" parent="AppBaseTheme">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#5d6153</item>
        <item name="android:gravity">center</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:padding">10dip</item>
        <item name="android:background">@drawable/gradient_dhbw_button</item>
    </style>

    <style name="DHBW_icon_Button" parent="AppBaseTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/gradient_dhbw_icon_button</item>
        <item name="android:cropToPadding">false</item>
       <item name="android:padding">7dip</item>
    </style>
    
        <style name="DHBW_icon_bar" parent="AppBaseTheme">
        <item name="android:textColor">@color/DHBW_white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/gradient_dhbw_icon_bar</item>
        <item name="android:cropToPadding">false</item>
       <item name="android:padding">1dip</item>

        
    </style>

    <style name="DHBW_Textfields" parent="AppBaseTheme">
        <item name="android:textColor">@color/DHBW_white</item>
        <item name="android:background">@color/DHBW_gray_light</item>
    </style>

    <style name="DHBW_Inputfields" parent="AppBaseTheme">
        <item name="android:textColor">@color/DHBW_gray_dark</item>
        <item name="android:background">@color/DHBW_gray_light</item>
    </style>

</resources>