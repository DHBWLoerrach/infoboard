<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="3dip" android:color="@color/DHBW_red_dark" />
             <gradient  android:angle="-90"  android:startColor="@color/DHBW_red_dark" android:endColor="@color/DHBW_gray_light"  />           
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/DHBW_red_dark" />
             <solid  android:color="#4ea0ab"/>      
         </shape>
     </item> 
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="@color/DHBW_red_dark" />
             <gradient  android:angle="-90"  android:startColor="@null"/>           
         </shape>
     </item>
</selector>